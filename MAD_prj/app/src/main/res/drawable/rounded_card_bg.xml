<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Soft light red background -->
    <solid android:color="#FFF5F5" />  <!-- very light red-pink tint -->

    <!-- Smooth rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional border for subtle depth -->
    <stroke
        android:width="1dp"
        android:color="#FFE0E0" />

    <!-- Internal padding -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
