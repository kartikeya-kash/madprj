<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FB"
    tools:context=".EmergencyActivity">

    <!-- Bottom Navbar (declared first so ScrollView can reference it with layout_above) -->
    <LinearLayout
        android:id="@+id/bottom_navbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home_filled"
                android:contentDescription="Home"
                android:tint="#888888" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#888888"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Activity -->
        <LinearLayout
            android:id="@+id/nav_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_activity"
                android:contentDescription="Activity"
                android:tint="#888888" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Reports -->
        <LinearLayout
            android:id="@+id/nav_reports"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_reports"
                android:contentDescription="Reports"
                android:tint="#888888" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reports"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- SOS -->
        <LinearLayout
            android:id="@+id/nav_sos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_sos"
                android:contentDescription="SOS"
                android:tint="#7B1113" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOS"
                android:textSize="12sp"
                android:textColor="#7B1113"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="Profile"
                android:tint="#888888" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#888888"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Scrollable Content above bottom bar -->
    <ScrollView
        android:id="@+id/scroll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navbar"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header (red) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:background="#D32F2F"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_back"
                    android:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emergency"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <!-- Big SOS Card -->
            <LinearLayout
                android:id="@+id/card_sos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="20dp"
                android:elevation="3dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:src="@drawable/circle_sos"
                    android:contentDescription="SOS icon" />

                <TextView
                    android:id="@+id/title_sos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emergency Button"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/sub_sos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Press and hold for 3 seconds to activate emergency services"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This will contact 911 and your emergency contacts"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:gravity="center"
                    android:layout_marginTop="6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="14dp"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btn_call_911"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Call 911"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:backgroundTint="#D32F2F" />

                    <Button
                        android:id="@+id/btn_find_hospital"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Find Hospital"
                        android:textAllCaps="false"
                        android:textColor="#1E88E5"
                        android:background="@android:color/transparent"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="@android:color/transparent"
                        android:padding="0dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Emergency Contacts Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emergency Contacts"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_marginBottom="8dp" />

            <!-- Contacts Card -->
            <LinearLayout
                android:id="@+id/card_contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="12dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp">

                <!-- Contact row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dr. Sarah Johnson"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#111111" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Primary Doctor"
                            android:textSize="12sp"
                            android:textColor="#777777" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/call_jane"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:padding="8dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_call"
                        android:contentDescription="Call"
                        android:tint="#2E7D32" />
                </LinearLayout>

                <!-- Contact 2 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EFEFEF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Doe"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#111111" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emergency Contact"
                            android:textSize="12sp"
                            android:textColor="#777777" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/call_jane"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:padding="8dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_call"
                        android:contentDescription="Call"
                        android:tint="#2E7D32" />
                </LinearLayout>

                <!-- Contact 3 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EFEFEF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jane Doe"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#111111" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/call_jane"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:padding="8dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_call"
                        android:contentDescription="Call"
                        android:tint="#2E7D32" />
                </LinearLayout>
            </LinearLayout>

            <!-- Nearby Hospitals Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nearby Hospitals"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_marginBottom="8dp" />

            <!-- Hospital Card Example -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="12dp"
                android:elevation="2dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City General Hospital"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#111111" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123 Medical Center Dr"
                    android:textSize="13sp"
                    android:textColor="#777777"
                    android:layout_marginTop="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/hosp_call"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Call"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#D32F2F" />

                    <Button
                        android:id="@+id/hosp_dir"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Directions"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="#000000" />
                </LinearLayout>
            </LinearLayout>

            <!-- Medical Information (yellow) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFBEA"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medical Information"
                    android:textStyle="bold"
                    android:textColor="#A56C00"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Blood Type: A+"
                    android:layout_marginTop="8dp"
                    android:textColor="#5A4200" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Allergies: Penicillin, Peanuts"
                    android:layout_marginTop="6dp"
                    android:textColor="#5A4200" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medications: Lisinopril 10mg, Metformin 500mg"
                    android:layout_marginTop="6dp"
                    android:textColor="#5A4200" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Conditions: Hypertension, Type 2 Diabetes"
                    android:layout_marginTop="6dp"
                    android:textColor="#5A4200" />
            </LinearLayout>

            <!-- Emergency Tips (blue) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B3EBF2"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emergency Tips"
                    android:textStyle="bold"
                    android:textColor="#0B4EA2"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Stay calm and assess the situation"
                    android:layout_marginTop="8dp"
                    android:textColor="#1F4F8B" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Call 911 for life-threatening emergencies"
                    android:layout_marginTop="6dp"
                    android:textColor="#1F4F8B" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Provide clear location information"
                    android:layout_marginTop="6dp"
                    android:textColor="#1F4F8B" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Keep medical information easily accessible"
                    android:layout_marginTop="6dp"
                    android:textColor="#1F4F8B" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
