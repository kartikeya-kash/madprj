<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FB">

    <!-- Scrollable Main Content -->
    <ScrollView
        android:id="@+id/scroll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navbar"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/header_texts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_greeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Good morning! ðŸ‘‹"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tv_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Let's check your health today"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_sos"
                    android:layout_width="64dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:padding="6dp"
                    android:text="SOS"
                    android:textAllCaps="false"
                    android:textColor="#FF0000"
                    android:background="@drawable/rounded_sos_button" />
            </LinearLayout>

            <!-- Summary Card -->
            <LinearLayout
                android:id="@+id/summary_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/gradient_summary_bg"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/summary_steps_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8,543"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/summary_steps_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Steps"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/summary_cal_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1247"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/summary_cal_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calories"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/summary_sleep_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7.5h"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/summary_sleep_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sleep"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- AI Health Tip -->
            <LinearLayout
                android:id="@+id/ai_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E9F9EE"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_ai_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI Health Tip"
                    android:textStyle="bold"
                    android:textColor="#1E8B30"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_ai_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You're doing great with exercise! Try drinking 2 more glasses of water to reach your hydration goal."
                    android:textColor="#1E8B30"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <!-- Health Tracking Section Title -->
            <TextView
                android:id="@+id/tv_health_tracking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health Tracking"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <!-- ROW 1: Calories | Water -->
            <LinearLayout
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <!-- Calories Card -->
                <LinearLayout
                    android:id="@+id/card_calories"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/rounded_button_white"
                    android:elevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/title_cal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calories"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <ImageView
                            android:id="@+id/btn_add_cal"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_add"
                            android:contentDescription="Add calories"
                            android:clickable="true"
                            android:focusable="true" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/sub_cal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1247 kcal / 2000 kcal"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="6dp" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/prog_cal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="10dp"
                        android:progress="62"
                        android:indeterminate="false"
                        android:progressTint="#FF6B6B"
                        android:backgroundTint="#EEEEEE" />

                    <TextView
                        android:id="@+id/percent_cal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="62% complete"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Water Card -->
                <LinearLayout
                    android:id="@+id/card_water"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/rounded_button_white"
                    android:elevation="2dp"
                    android:layout_marginStart="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/title_water"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Water"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <ImageView
                            android:id="@+id/btn_add_water"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_add"
                            android:contentDescription="Add water"
                            android:clickable="true"
                            android:focusable="true" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/sub_water"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6 glasses / 8 glasses"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="6dp" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/prog_water"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="10dp"
                        android:progress="75"
                        android:indeterminate="false"
                        android:progressTint="#009FE3"
                        android:backgroundTint="#EEEEEE" />

                    <TextView
                        android:id="@+id/percent_water"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="75% complete"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>


            <!-- ROW 2: Sleep | Exercise -->
            <LinearLayout
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <!-- Sleep Card -->
                <LinearLayout
                    android:id="@+id/card_sleep"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/rounded_button_white"
                    android:elevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/title_sleep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sleep"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <ImageView
                            android:id="@+id/btn_add_sleep"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_add"
                            android:contentDescription="Add sleep record"
                            android:clickable="true"
                            android:focusable="true" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/sub_sleep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7.5 hours / 8 hours"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="6dp" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/prog_sleep"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="10dp"
                        android:progress="94"
                        android:indeterminate="false"
                        android:progressTint="#A070DD"
                        android:backgroundTint="#EEEEEE" />

                    <TextView
                        android:id="@+id/percent_sleep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="94% complete"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Exercise Card -->
                <LinearLayout
                    android:id="@+id/card_exercise"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/rounded_button_white"
                    android:elevation="2dp"
                    android:layout_marginStart="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/title_ex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Exercise"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <ImageView
                            android:id="@+id/btn_add_ex"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_add"
                            android:contentDescription="Add exercise"
                            android:clickable="true"
                            android:focusable="true" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/sub_ex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25 mins / 30 mins"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="6dp" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/prog_ex"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="10dp"
                        android:progress="83"
                        android:indeterminate="false"
                        android:progressTint="#00C853"
                        android:backgroundTint="#EEEEEE" />

                    <TextView
                        android:id="@+id/percent_ex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="83% complete"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- ROW 3: Vitals | Reports -->
            <LinearLayout
                android:id="@+id/row3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Vitals Card -->
                <LinearLayout
                    android:id="@+id/card_vitals"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/rounded_button_white"
                    android:elevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/title_vitals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vitals"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <ImageView
                            android:id="@+id/btn_add_vitals"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_add"
                            android:contentDescription="Add Vitals"
                            android:clickable="true"
                            android:focusable="true" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/sub_vitals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to record vitals"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <!-- Reports Card -->
                <LinearLayout
                    android:id="@+id/card_reports"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/rounded_button_white"
                    android:elevation="2dp"
                    android:layout_marginStart="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/title_reports"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reports"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <ImageView
                            android:id="@+id/btn_add_reports"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_add"
                            android:contentDescription="Add reports"
                            android:clickable="true"
                            android:focusable="true" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/sub_reports"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to view insights"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="10dp" />
                </LinearLayout>
            </LinearLayout>


            <!-- Quick Actions -->
            <TextView
                android:id="@+id/tv_quick_actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/quick_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/btn_log_water"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="ðŸ’§ Log Water"
                    android:textAllCaps="false"
                    android:background="@drawable/rounded_button_white"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btn_add_meal"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="ðŸŽ Add Meal"
                    android:textAllCaps="false"
                    android:background="@drawable/rounded_button_white"
                    android:textColor="#000000"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- âœ… Bottom Navbar -->
    <LinearLayout
        android:id="@+id/bottom_navbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:paddingVertical="6dp">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home_filled"
                android:tint="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Activity -->
        <LinearLayout
            android:id="@+id/nav_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_activity"
                android:tint="#888888" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Reports -->
        <LinearLayout
            android:id="@+id/nav_reports"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_reports"
                android:tint="#888888" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reports"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- SOS -->
        <LinearLayout
            android:id="@+id/nav_sos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_sos"
                android:tint="#FF0000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOS"
                android:textSize="12sp"
                android:textColor="#FF0000"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile"
                android:tint="#888888" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
