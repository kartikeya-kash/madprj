<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FB"
    tools:context=".ReportsInsightsActivity"
    android:fitsSystemWindows="true"
    >

    <!-- Bottom Navbar -->
    <LinearLayout
        android:id="@+id/bottom_navbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_home"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home_filled"
                android:contentDescription="Home"
                android:tint="#888888" />

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#888888"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Activity -->
        <LinearLayout
            android:id="@+id/nav_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_activity"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_activity"
                android:contentDescription="Activity"
                android:tint="#888888" />

            <TextView
                android:id="@+id/tv_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Reports -->
        <LinearLayout
            android:id="@+id/nav_reports"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_reports"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_reports"
                android:contentDescription="Reports"
                android:tint="#000000" />

            <TextView
                android:id="@+id/tv_reports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reports"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- SOS -->
        <LinearLayout
            android:id="@+id/nav_sos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_sos"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_sos"
                android:contentDescription="SOS"
                android:tint="#7B1113" />

            <TextView
                android:id="@+id/tv_sos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOS"
                android:textSize="12sp"
                android:textColor="#7B1113"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_profile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="Profile"
                android:tint="#888888" />

            <TextView
                android:id="@+id/tv_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#888888"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scroll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navbar"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/content_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- (All your existing report cards & sections here...) -->

            <!-- Weekly Summary -->
            <LinearLayout
                android:id="@+id/weekly_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginTop="18dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/weekly_summary_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly Summary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/summary_most_active"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Most Active Day: Saturday â€” 12,000 steps, 90 min exercise"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/summary_best_sleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Best Sleep Night: Saturday â€” 8.3 hours"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/summary_hydration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hydration Champion: Thursday â€” 9 glasses of water"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/summary_overall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overall Score: B+ â€” Good progress this week!"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <!-- ðŸ§  AI Report Generator Section -->
            <LinearLayout
                android:id="@+id/ai_report_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/ai_report_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI Report Generator"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/que"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ask anything"
                    />

                <Button
                    android:id="@+id/btn_generate_ai_report"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Generate AI Report"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="#6200EE"
                    android:textColor="#FFFFFF"
                    android:elevation="3dp"
                    android:layout_marginBottom="8dp" />
                <LinearLayout
                    android:id="@+id/ai_loader_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginTop="12dp">

                    <ProgressBar
                        android:id="@+id/ai_loader"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:indeterminate="true"
                        android:indeterminateTint="#D7263D" />

                    <TextView
                        android:id="@+id/ai_loader_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Generating report..."
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_ai_generated_report"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AI report will appear here after generation..."
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:background="#F3F4F6"
                    android:padding="12dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp" />
            </LinearLayout>

            <!-- Export Options -->
            <LinearLayout
                android:id="@+id/export_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/export_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Export Options"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btn_download_pdf"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Download PDF Report"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF"
                    android:elevation="3dp"
                    android:layout_marginBottom="6dp" />

                <Button
                    android:id="@+id/btn_export_csv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Export Data (CSV)"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="#2196F3"
                    android:textColor="#FFFFFF"
                    android:elevation="3dp"
                    android:layout_marginBottom="6dp" />

                <Button
                    android:id="@+id/btn_share_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Share with Doctor"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="#9C27B0"
                    android:textColor="#FFFFFF"
                    android:elevation="3dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>