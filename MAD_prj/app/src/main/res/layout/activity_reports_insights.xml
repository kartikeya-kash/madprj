<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FB"
    tools:context=".ReportsInsightsActivity"

    android:fitsSystemWindows="true">

    <!-- Bottom Navbar (declared first so ScrollView can reference it with layout_above) -->
    <LinearLayout
        android:id="@+id/bottom_navbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_home"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home_filled"
                android:contentDescription="Home"
                android:tint="#888888" />

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#888888"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Activity -->
        <LinearLayout
            android:id="@+id/nav_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_activity"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_activity"
                android:contentDescription="Activity"
                android:tint="#888888" />

            <TextView
                android:id="@+id/tv_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Reports -->
        <LinearLayout
            android:id="@+id/nav_reports"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_reports"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_reports"
                android:contentDescription="Reports"
                android:tint="#000000" />

            <TextView
                android:id="@+id/tv_reports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reports"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- SOS -->
        <LinearLayout
            android:id="@+id/nav_sos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_sos"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_sos"
                android:contentDescription="SOS"
                android:tint="#7B1113" />

            <TextView
                android:id="@+id/tv_sos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOS"
                android:textSize="12sp"
                android:textColor="#7B1113"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_profile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="Profile"
                android:tint="#888888" />

            <TextView
                android:id="@+id/tv_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#888888"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scroll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navbar"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/content_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header row: title + export -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reports and Insights"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- Reporting Period card -->
            <LinearLayout
                android:id="@+id/reporting_period"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:elevation="2dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_reporting_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reporting \nPeriod"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginStart="2dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Period buttons: explicit width ensures visibility -->
                <LinearLayout
                    android:id="@+id/period_buttons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_week"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Week"
                        android:textSize="12sp"
                        android:backgroundTint="#111827"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btn_month"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="8dp"
                        android:text="Month"
                        android:textSize="12sp"
                        android:backgroundTint="#EAEAEA"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/btn_year"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="8dp"
                        android:text="Year"
                        android:textSize="12sp"
                        android:backgroundTint="#EAEAEA"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

            <!-- Summary cards grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">

                <!-- first row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/card_steps"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:layout_marginEnd="8dp"
                        android:background="#7C6BFF"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_steps_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8957.1"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/tv_steps_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avg Daily Steps"
                            android:textSize="13sp"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="6dp" />

                        <TextView
                            android:id="@+id/tv_steps_sub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="29% goal success"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/card_sleep"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:layout_marginStart="8dp"
                        android:background="#27D08D"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_sleep_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7.5h"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/tv_sleep_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avg Sleep"
                            android:textSize="13sp"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="6dp" />

                        <TextView
                            android:id="@+id/tv_sleep_sub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="29% goal success"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- second row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:id="@+id/card_calories"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:layout_marginEnd="8dp"
                        android:background="#FF7043"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_calories_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2014.3"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/tv_calories_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avg Calories"
                            android:textSize="13sp"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="6dp" />

                        <TextView
                            android:id="@+id/tv_calories_sub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="43% in range"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/card_water"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:layout_marginStart="8dp"
                        android:background="#2BA0FF"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_water_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7.3"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/tv_water_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avg Water (glasses)"
                            android:textSize="13sp"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="6dp" />

                        <TextView
                            android:id="@+id/tv_water_sub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="43% goal success"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Tab buttons (Activity / Health / Goals) -->
            <LinearLayout
                android:id="@+id/tabs_linear"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/tab_activity"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="Activity"
                    android:textSize="13sp"
                    android:backgroundTint="#111827"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="6dp"/>

                <Button
                    android:id="@+id/tab_health"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="Health"
                    android:textSize="13sp"
                    android:backgroundTint="#EAEAEA"
                    android:textColor="#000000"
                    android:layout_marginEnd="6dp"/>

                <Button
                    android:id="@+id/tab_goals"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="Goals"
                    android:textSize="13sp"
                    android:backgroundTint="#EAEAEA"
                    android:textColor="#000000"/>
            </LinearLayout>

            <!-- AI-Generated Insights -->
            <TextView
                android:id="@+id/insights_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI-Generated Insights"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="18dp"
                android:textColor="#7B68EE" />

            <!-- Insight cards -->
            <LinearLayout
                android:id="@+id/insights_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/insight_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E6F4EA"
                    android:padding="12dp"
                    android:text="Great Exercise Progress! You exceeded your exercise goal 4 out of 7 days this week. Your consistency is improving!"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/insight_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF9C4"
                    android:padding="12dp"
                    android:text="Hydration Opportunity — You missed your water goal on 3 days. Try setting hourly reminders to stay hydrated."
                    android:textSize="13sp"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/insight_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E3F2FD"
                    android:padding="12dp"
                    android:text="Sleep Pattern Analysis — Your average sleep is 7.4 hours. Consider going to bed 30 minutes earlier for optimal recovery."
                    android:textSize="13sp"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/insight_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E8F5E9"
                    android:padding="12dp"
                    android:text="Weekend Warrior! Your Saturday activity was exceptional with 12,000 steps and 90 minutes of exercise."
                    android:textSize="13sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <!-- Weekly Summary -->
            <LinearLayout
                android:id="@+id/weekly_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginTop="18dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/weekly_summary_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly Summary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/summary_most_active"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Most Active Day: Saturday — 12,000 steps, 90 min exercise"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/summary_best_sleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Best Sleep Night: Saturday — 8.3 hours"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/summary_hydration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hydration Champion: Thursday — 9 glasses of water"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/summary_overall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overall Score: B+ — Good progress this week!"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <!-- Export Options -->
            <!-- Export Options -->
            <LinearLayout
                android:id="@+id/export_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/export_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Export Options"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <!-- Download PDF -->
                <Button
                    android:id="@+id/btn_download_pdf"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Download PDF Report"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF"
                    android:elevation="3dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="6dp"
                    android:radius="10dp" />

                <!-- Export CSV -->
                <Button
                    android:id="@+id/btn_export_csv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Export Data (CSV)"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:backgroundTint="#2196F3"
                    android:textColor="#FFFFFF"
                    android:elevation="3dp"
                    android:layout_marginBottom="6dp"
                    android:radius="10dp" />

                <!-- Share with Doctor -->
                <Button
                    android:id="@+id/btn_share_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Share with Doctor"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:backgroundTint="#9C27B0"
                    android:textColor="#FFFFFF"
                    android:elevation="3dp"
                    android:radius="10dp" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
