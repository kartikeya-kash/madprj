                    android:layout_height="wrap_content"
                    android:text="Sleep Schedule"
                    android:textColor="#CFCFE5"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
